  <script>
    let sectionCount = 3;

    function addSection() {
      sectionCount++;
      const sections = document.getElementById('sections');

      const div = document.createElement('div');
      div.className = 'section-card';
      div.innerHTML = `
        <h3>Section ${sectionCount}</h3>
        <p>All the necessary information about this section. This can be anything like travel section, hotel or any other activity.</p>
        <div class="inputs-row">
          <input type="text" placeholder="Date Range: xxx to yyy" />
          <input type="text" placeholder="Budget of this section" />
        </div>
      `;

      sections.appendChild(div);
    }
  </script>

